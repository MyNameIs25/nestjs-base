{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/test/**/*",
      "!{projectRoot}/jest.config.ts"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/tsconfig.json",
      "{workspaceRoot}/nest-cli.json"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "nest build {projectName}"
      },
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nest start {projectName} --watch"
      },
      "configurations": {
        "debug": {
          "command": "nest start {projectName} --debug --watch"
        }
      }
    },
    "test": {
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "cache": true,
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts"
      }
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/eslint.config.mjs"],
      "cache": true,
      "executor": "@nx/eslint:lint"
    },
    "e2e": {
      "inputs": ["default", "^production"],
      "cache": true,
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "{projectRoot}/test/jest-e2e.json"
      }
    }
  },
  "generators": {
    "@nx/nest": {
      "application": { "linter": "eslint", "unitTestRunner": "jest" },
      "library": { "linter": "eslint", "unitTestRunner": "jest" }
    }
  }
}
